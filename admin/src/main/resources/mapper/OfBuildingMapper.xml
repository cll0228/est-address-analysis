<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lezhi.address.admin.mapper.OfBuildingMapper">
    <resultMap id="BaseResultMap" type="com.lezhi.address.admin.pojo.OfBuilding">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="building_no" property="buildingNo" jdbcType="VARCHAR"/>
        <result column="residence_id" property="residenceId" jdbcType="INTEGER"/>
        <result column="residence_name" property="residenceName" jdbcType="VARCHAR"/>
        <result column="std_addr_id" property="stdAddrId" jdbcType="INTEGER"/>
        <result column="house_count" property="houseCount" jdbcType="INTEGER"/>
        <result column="total_floor" property="totalFloor" jdbcType="INTEGER"/>
        <result column="lat" property="lat" jdbcType="DECIMAL"/>
        <result column="lon" property="lon" jdbcType="DECIMAL"/>
        <result column="baidu_lon" property="baiduLon" jdbcType="DECIMAL"/>
        <result column="baidu_lat" property="baiduLat" jdbcType="DECIMAL"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="del_status" property="delStatus" jdbcType="INTEGER"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, building_no, residence_id, std_addr_id, house_count, total_floor, lat, lon, baidu_lon,
        baidu_lat, create_time, del_status, update_time
    </sql>

    <select id="selectBuildById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"></include> FROM `of_building` WHERE residence_id = #{id} ORDER BY id asc
        <if test="null != page and '' != page">
            LIMIT  ${page},10
        </if>
    </select>

    <select id="getBuilidngInfoById" resultMap="BaseResultMap">
        select b.*,r.residence_name from ocn_address.of_building b, ocn_address.of_residence r where b.residence_id = r.id and b.id = #{buildingId}
    </select>

    <update id="updateOfBuildingInfo">
        UPDATE ocn_address.of_building(building_no, house_count, total_floor, update_time)
        VALUES (
          #{buildingNo},
          #{houseCount},
          #{totalFloor},
          NOW()
        )
        WHERE id = #{buildingId}
    </update>
</mapper>